extends ../layout

block content
	h1 Article
	- articles = articles
	table
		tr
			th ID
			td= articles[0].articlesId
		tr
			th Auteur
			td= articles[0].auteur
		tr
			th Titre
			td= articles[0].titre
		tr
			th Corps
			td= articles[0].corps
		tr
			th Creation
			td= articles[0].createdAt
		tr
			th Actions
			td
				form(method="get", action= modif)
					p.buttons
					input(type="submit", value="Modifier")
		tr
			if notThisOne
				th
			if notThisOne
				td
					form(method="post", action= suppr)
						p
						input(type="submit", value="Supprimer")
